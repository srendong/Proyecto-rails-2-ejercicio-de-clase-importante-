<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<h1>Products</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 text-right">
			<%= link_to "New Product", new_product_path, remote: true, class: "btn btn-primary" %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Price</th>
						<th>Actions</th>
					</tr>
				</thead>

				<tbody>
					<% @products.each do |product| %>
						<%= render "row", product: product %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
